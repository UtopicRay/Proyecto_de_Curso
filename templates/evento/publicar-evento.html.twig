{% extends 'base.html.twig' %}
{% block title %}Publicar Evento!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/principal/crearusuario.css') }}">
{% endblock %}
{% block body %}
    <body>
    <div class="container col-lg-8">
        <div class="card o-hidden border-0 shadow-lg my-5" style="background-color: #2a2b38">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"></div>
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray mb-4">{{ controller_name }}</h1>
                        </div>
                        {{ form_start(form,{attr:{'class':'user'}}) }}
                        <div class="form-group row">
                            <div class="form-group">
                                <label class="form-label">Nombre del Evento</label>
                                {{ form_widget(form.Nombre) }}
                            </div>
                            <div class="col-sm-12">
                                <label class="form-label">Tema Principal del Evento</label>
                                {{ form_widget(form.Tematica) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label class="form-label">Fecha de Inicio del Evento</label>
                                    {{ form_widget(form.fecha_ini) }}
                                    <label class="form-label"> Hora de Inicio del Evento</label>
                                    {{ form_widget(form.hora_inic) }}
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label class="form-label">Fecha de cierre del Evento</label>
                                    {{ form_widget(form.fecha_fin) }}
                                    <label class="form-label"> Hora de Cierre del Evento</label>
                                    {{ form_widget(form.hora_fin) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(form.Cancelar) }}
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/scripts.js') }}"></script>
    {% endblock %}
    </body>
{% endblock %}