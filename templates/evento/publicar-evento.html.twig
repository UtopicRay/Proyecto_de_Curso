{% extends 'base.html.twig' %}
{% block title %}Publicar Evento!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sb-admin-2.min.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block body %}

        <div class="container col-lg-7 pt-3">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block"></div>
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Cree un evento!</h1>
                                </div>
                                {{ form_start(form,{attr:{'class':'user'}}) }}
                                <div class="form-group row">
                                <div class="form-group">
                                    {{ form_widget(form.Nombre,{attr:{'placeholder':'Nombre','type':'text','class':'form-control form-control-user'}}) }}
                                </div>
                                </div>
                                <div class="form-group row">
                                    {{ form_widget(form.Tematica,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                </div>

                        <div class="form-group row mt-5" >
                                {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                        </div>
                        </div>
                    </div>
                            {{ form_end(form) }}
                        </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}