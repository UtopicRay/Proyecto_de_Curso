{% extends 'base.html.twig' %}

{% block title %}Tablas investigaciones{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dataTables.bootstrap5.min.css') }}">
{% endblock %}
{% block body %}
    <body id="page-top">
    <div id="wrapper">
        {% block navegacion %}
            {{ parent() }}
        {% endblock %}
        <div class="container-fluid mt-5 pt-4">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tables</h1>
            <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                For more information about DataTables, please visit the

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Investigaciones Publicadas</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titulo</th>
                                <th>Catedra</th>
                                <th>Facultad</th>
                                <th>Puntuacion</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Titulo</th>
                                <th>Catedra</th>
                                <th>Facultad</th>
                                <th>Puntuacion</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for inve in inves %}
                                <tr>
                                    <td>{{ inve.id }}</td>
                                    <td><a href="{{ path('ana_eventIF',{ ide:eventos.id,id:inve.id }) }}">{{ inve.Titulo }}</a></td>
                                    <td>{{ inve.Catedra }}</td>
                                    <td>{{ inve.Facultad }}</td>
                                    {% if  inve.puntuacion ==null %}
                                        <td>Sin evaluar</td>
                                    {% else %}
                                        <td>{{ inve.puntuacion }}</td>
                                    {% endif %}
                                    </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    {% block footer %}
        {{ parent() }}
    {% endblock %}
    <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {% block Modal %}
        {{ parent() }}
    {% endblock %}
    </body>
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/datatables.min.js') }}"></script>
        <script src="{{ asset('js/scripts.js') }}"></script>

        <!-- Page level plugins -->
        <script src="{{ asset('js/dataTables.bootstrap5.min.js') }}"></script>

    {% endblock %}
{% endblock %}
