{% extends 'base.html.twig' %}
{% block title %}Publicar Investigacion!{% endblock %}
{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sb-admin-2.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/propio.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <body style="background-color: #002E94">
    <div class="container col-lg-8">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"></div>
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Publicar Investigacion!</h1>
                            </div>
                            {{ form_start(form,{attr:{'class':'user'}}) }}
                            <div class="form-group row">
                                <div class="form-group">
                                    {{ form_widget(form.Titulo,{attr:{'placeholder':'Titulo','type':'email','class':'form-control form-control-user'}}) }}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(form.Facultad,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.Catedra,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="form-group">
                                        {{ form_widget(form.descripcion,{attr:{'placeholder':'Descripcion','type':'email','class':'form-control form-control-user'}}) }}
                                    </div>
                                <div class="form-group row">
                                    <div class="col-sm-7 mb-3 mb-sm-0">
                                        {{ form_widget(form.archivo,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                    </div>
                                </div>

                                {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}