{% extends 'base.html.twig' %}
{% block title %}Insertar Cronograma!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('sb-admin/css/sb-admin-2.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/principal/crearusuario.css') }}">
{% endblock %}
{% block body %}
    <body class="align-middle">
    <div class="card shadow" data-aos="fade-up" data-aos-duration="300" data-aos-delay="100"
         style="height: 508.25px;width: 700px;margin-left: 350px;margin-top: 80px;">
        <div class="card-body text-capitalize col-lg-10 m-5">
                {{ form_start(form,{attr:{'class':'user'}}) }}
                <h1 class="text-center mt-0">{{ controller_name |capitalize }}</h1>
                <div class="text-start row justify-content-center">
                    <div class="col-lg-12 mt-1 mb-1"><label class="form-label">Tema</label>
                        {{ form_widget(form.tema)}}
                    </div>
                    <div class="col-lg-12 mt-1 mb-1 "><label class="form-label">Catedra</label>
                        {{ form_widget(form.catedra,{attr:{'class':'form-control','required':''}}) }}
                       </div>
                    <div class="col-lg-6 mt-1 mb-1"><label class="form-label">fecha de Inicio</label>
                        {{ form_widget(form.fecha_ini,{attr:{'required':''}}) }}
                        <label class="form-label">Hora de Inicio</label>
                        {{ form_widget(form.hora_inic,{attr:{'required':''}}) }}
                    </div>
                    <div class="col-lg-6 mt-1 mb-1"><label class="form-label">Fecha de Cierre</label>
                        {{ form_widget(form.fecha_fin,{attr:{'required':''}}) }}
                        <label class="form-label">Hora de Cierre</label>
                        {{ form(form.hora_final,{attr:{'required':''}}) }}
                    </div>
                    <div class="col-lg-6">
                    {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary'}}) }}
                    </div>
                    </div>
                {{ form_end(form) }}
        </div>
    </div>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}