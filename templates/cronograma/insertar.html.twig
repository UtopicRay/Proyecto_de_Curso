{% extends 'base.html.twig' %}
{% block title %}Insertar Cronograma!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sb-admin-2.min.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block"></div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Cree un evento!</h1>
                                    </div>
                                    {{ form_start(form,{attr:{'class':'user'}}) }}
                                    <div class="form-group row">
                                        <div class="form-group">
                                            {{ form_widget(form.tema,{attr:{'placeholder':'Tema','type':'text','class':'form-control form-control-user'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        {{ form_widget(form.catedra,{attr:{'placeholder':'Catedra','type':'text','class':'form-control form-control-user'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(form.fecha_ini,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.fecha_fin,{attr:{'placeholder':'Catedra','type':'password','class':'form-control form-control-user'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(form.hora_inic,{attr:{'class':' btn btn-block btn-user border'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.hora_final,{attr:{'placeholder':'Catedra','type':'password','class':'form-control form-control-user'}}) }}
                                    </div>
                                </div>

                                {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    </div>
{% endblock %}