{% extends 'base.html.twig' %}

{% block title %}Registrar Usuario{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/principal/crearusuario.css') }}">
{% endblock %}
{% block body %}
        <aside class="col-lg-4"><img class="m-5 p-5" src="{{ asset('img/logouci.png') }}" alt="Imagen no encontrada"></aside>
        <div class="container col-lg-6 col-sm-6 mr-2">
            <div class="card o-hidden border-0 shadow-lg my-5" style="background-color: #2a2b38">
                <div class="card-3d-wrapper">
                    <!-- Nested Row within Card Body -->
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="h4 text-gray mb-4 ">{{ controller_name }}</h4>
                        </div>
                        {{ form_start(form,{attr:{'class':'user'}}) }}
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(form.Nombre,{attr:{'placeholder':'Nombre','type':'text','class':'form-control form-control-user form-style','required':''}}) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(form.Apellido,{attr:{'placeholder':'Apellido','type':'text','class':'form-control form-control-user form-style','required':''}}) }}
                            </div>
                        </div>
                            <div class="form-group">
                            {{ form_widget(form.email,{attr:{'placeholder':'Direccion Email','type':'email','class':'form-control form-control-user form-style'}}) }}
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(form.nombre_usuario,{attr:{'placeholder':'Nombre de Usuario','type':'text','class':'form-control form-control-user form-style'}}) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(form.password,{attr:{'placeholder':'Contraseña','type':'password','class':'form-control form-control-user form-style'}}) }}
                            </div>
                        </div>
                        {{ form_widget(form.Aceptar,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                        {{ form_end(form) }}
                        <div class="text-center">
                            <a class="small">Olvido su contraseña?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="{{ path('app_login') }}">Posee una cuenta? Inicie Sesion!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% block javascripts %}
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/script.min.js') }}"></script>
{%endblock %}
{% endblock %}
