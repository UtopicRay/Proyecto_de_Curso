{% extends 'base.html.twig' %}

{% block title %}Registrar Usuario{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sb-admin-2.min.css') }}">
{% endblock %}
{% block body %}
    <body style="background-color: #002E94">
    <div class="row p-5">
        <aside class="col-sm-6 col-lg-4" style="position: relative; left: 200px;top:100px;"><img class="m-5 p-5" src="{{ asset('img/logouci.png') }}" alt="Imagen no encontrada"></aside>
        <div class="container col-lg-6 mr-2">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Crear Una Cuenta!</h1>
                        </div>
                        {{ form_start(form,{attr:{'class':'user'}}) }}
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(form.Nombre,{attr:{'placeholder':'Nombre','type':'text','class':'form-control form-control-user'}}) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(form.Apellido,{attr:{'placeholder':'Apellido','type':'text','class':'form-control form-control-user'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email,{attr:{'placeholder':'Direccion Email','type':'email','class':'form-control form-control-user'}}) }}
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(form.nombre_usuario,{attr:{'placeholder':'Nombre de Usuario','type':'text','class':'form-control form-control-user'}}) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(form.password,{attr:{'placeholder':'Password','type':'password','class':'form-control form-control-user'}}) }}
                            </div>
                        </div>
                        {{ form_widget(form.submit,{attr:{'class':'btn btn-primary btn-user btn-block'}}) }}
                        {{ form_end(form) }}
                        <div class="text-center">
                            <a class="small">Olvido su contrase√±a?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="{{ path('app_login') }}">Posee una cuenta? Inicie Sesion!</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    </div>
    </body>
{% endblock %}
